{
    "compilerOptions": {
        "outDir": "build",
        "module": "commonjs",
        "lib": ["ES2022", "DOM"],
        "target": "ES2022",
        "declaration": true,
        "noImplicitAny": false,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "useDefineForClassFields": false,
        "sourceMap": false,
        "skipLibCheck": true,
        "jsx": "react"
    },
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/frontend/**"
    ]
}
