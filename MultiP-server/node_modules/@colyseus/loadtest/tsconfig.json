{
    "compilerOptions": {
        "outDir": "lib",
        "module": "CommonJS",
        "lib": ["es6", "dom"],
        "target": "ESNext",
        "declaration": true,
        "noImplicitAny": false,
        "sourceMap": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": true
    },
    "include": [
      "src/**/*.ts"
    ]
}
